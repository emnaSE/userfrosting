{% extends "pages/abstract/dashboard.html.twig" %}

{% block stylesheets_page %}
    <!-- Page-specific CSS asset bundle -->
    {{ assets.css('css/form-widgets') | raw }}
{% endblock %}

{# Overrides blocks in head of base template #}
{% block page_title %}{{ translate("ORDER", 2) }}{% endblock %}

{% block page_description %}{{ translate("ORDER.PAGE") }}.{% endblock %}

{% block body_matter %}
    <div class="row">
        <div class="col-md-12">
            <div id="widget-order" class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title"><i class="fa fa-tasks fa-fw"></i>Order</h3>
                    {% include "tables/table-tool-menu.html.twig" %}
                 </div>
                <div class="box-body">
                    {% include "tables/order.html.twig" with {
                            "table" : {
                                "id" : "table-order"
                            }
                        }
                    %}
                 </div>
              </div>
         </div>
     </div>
 {% endblock %}
 {% block scripts_page %}
    <!-- Include validation rules -->
    <script>
    {% include "pages/partials/page.js.twig" %}
    </script>

    <!-- Include form widgets JS -->
    {{ assets.js('js/form-widgets') | raw }}

    <!-- Include page-specific JS -->
    {{ assets.js('js/pages/order') | raw }}

{% endblock %}
